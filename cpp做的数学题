/*
      1
     3  5
   11  9   7
 13  15  17  19
*/
求第2019项的行和列

#include<iostream>
using namespace std;
int main() {
	int a = 1;
	int n = 50;
	int shuzu[100][100];
	for (int i = 0; i < n; i++)
	{
		a = a + i * 2;
		
			if (i % 2 == 1)
			{
				for (int j = 0; j <= i; j++) {
					cout << a +  2 * j << ' ';
					shuzu[i][j] = a + 2 * j;
					
				}
			}
			else
			{
				for (int j = i; j >= 0; j--) { 
					{
					cout << a +   2 * j << ' ';
					//cout << i << ' ' << j;
					shuzu[i][i-j] = a + 2 * j;
					}
			}
		}
		cout << '\n';
	}
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++) {
			//cout <<i+1<<"行"<<j+1<<"列是"<< shuzu[i][j] << endl;
			if (shuzu[i][j] == 2019)
			{
				cout << "找到了!!!" <<"行是"<<i+1<<"列是"<<j+1<< endl;
				break;
			}
		}
	}
	system("pause");
}
